<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.bbbaden.yahtzee.LoginController">
    <AnchorPane prefHeight="450.0" prefWidth="450.0">
        <children>
            <Pane layoutX="75.0" layoutY="75.0" prefHeight="300.0" prefWidth="300.0">
                <children>
                    <Button fx:id="startGame" layoutX="115.0" layoutY="196.0" mnemonicParsing="false" onAction="#onStartGameButtonClick" text="Registrieren" />
                    <Button fx:id="switchButton" alignment="CENTER" contentDisplay="CENTER" layoutX="58.0" layoutY="236.0" mnemonicParsing="false" onAction="#onSwitchLoginButtonClick" text="Bereits ein Konto? Melde dich an!" textAlignment="CENTER" />
                    <TextField fx:id="nameField" layoutX="50.0" layoutY="41.0" prefWidth="200.0" promptText="Username" />
                    <Label layoutX="50.0" layoutY="24.0" text="Username" />
                    <Label layoutX="50.0" layoutY="76.0" text="Passwort" />
                    <Label fx:id="secpassLab" layoutX="50.0" layoutY="130.0" text="Passwort wiederholen" visible="true" />
               <PasswordField fx:id="passwordField" layoutX="50.0" layoutY="93.0" prefHeight="25.0" prefWidth="200.0" promptText="Passwort" />
               <PasswordField fx:id="secpassField" layoutX="50.0" layoutY="147.0" prefHeight="25.0" prefWidth="200.0" promptText="Passwort" />
                </children>
            </Pane>
        </children>
    </AnchorPane>
</VBox>
